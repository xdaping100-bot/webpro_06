<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title><%= data.name %></title>
</head>
<body>
  <h2><%= data.name %>の編集</h2>
  <form action="/music/update/<%= id %>" method="POST">
    <table>
      <tr><td>ID</td><td><%= data.id %></td></tr> 
      <tr><th>項目</th><th>データ</th></tr>
      <tr><td>アルバム名</td><td><input type="text" name="title" value="<%= data.title %>"></td></tr>
      <tr><td>アーティスト</td><td><input type="text" name="artist" value="<%= data.artist %>"></td></tr>
      <tr><td>発売年</td><td><input type="number" name="year" value="<%= data.year %>"></td></tr>
      <tr><td>総再生時間</td><td><input type="text" name="time" value="<%= data.time %>"></td></tr>
      <tr><td>価格</td><td><input type="number" name="price" value="<%= data.price %>"></td></tr>
    </table>
    <input type="submit" values="更新">
  </form>
  <br>
  <a href="/music/">アルバム一覧に戻る</a>
</body>
</html>